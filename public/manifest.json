{
  "manifest_version": 2,

  "name": "Dopamine Blocker",
  "description": "Break the Internet content slot machine.",
  "version": "1.0",

  "options_page": "options.html",

  "icons": {
    "256": "icon.png"
  },

  "browser_action": {
    "default_icon": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],

  "incognito": "split",

  "background": {
    "scripts": ["js/vendor.js", "js/background.js"]
  },

  "permissions": [
    "storage",
    "<all_urls>"
  ]
}
